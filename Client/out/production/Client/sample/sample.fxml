<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <children>
      <VBox alignment="CENTER" prefHeight="675.0" prefWidth="1200.0" spacing="10.0">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Авторизация" textAlignment="CENTER" wrappingWidth="143.484375">
               <font>
                  <Font size="24.0" />
               </font></Text>
            <HBox alignment="CENTER" prefHeight="0.0" prefWidth="1200.0" spacing="5.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Введите логин:" wrappingWidth="97.978515625" />
                  <TextField fx:id="authorizationLogin" promptText="Например, gosha777"/>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="0.0" prefWidth="1200.0" spacing="5.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Введите пароль:" wrappingWidth="98.619140625" />
                  <PasswordField fx:id="authorizationPassword" promptText="Например, 12345"/>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="0.0" prefWidth="1200.0" spacing="5.0">
               <children>
                  <Button mnemonicParsing="false" text="Вход" onAction="#authorization" fx:id="authorizationButton"/>
                  <Button mnemonicParsing="false" text="Регистрация" onAction="#registration"/>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</GridPane>
